<head>
</head>
<body>
    <h4>New listing</h4>
    <br>
    <h1>Let your van work for you</h1>
    <br>
    <form action="/listings/new" method="POST">
        <label for="cars">Choose a car:</label>
            <select id="model" name="model" placeholder="Volkswagen">
                    <% for(let model of models) {%>
                        <option value="<%=model%>"><%=model%></option>
                    <% } %>
            </select>
        <br>
        <label for="year">Year: </label>
            <select id="year" name="year">
                <% for(let year of years) {%>
                    <option value="<%=year%>"><%=year%></option>
                <% } %>
            </select>
        <br>
        <input type="text" placeholder="Enter your city" name="city">
        <br>
        <label for="description">Description: </label><br>
        <textarea placeholder="Help the user understand what your van is all about!" name="description" id="description" cols="30" rows="10"></textarea>
        <br>
        <label for="van_img">Upload a picture: </label>
        <input id="van_img" type="file" name="van_img">
        <br>
        <div id="pricing">
            <h3>Pricing</h3>
            <label for="van_price">Base price: $</label>
            <input type="number" id="van_price" name="van_price" min="10" max="100"><br>
        </div>
        <br>
        <input type="submit" value="submit">
    </form>
<a href="/">Bring me Home</a>
</body>
